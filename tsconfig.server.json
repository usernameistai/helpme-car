{
  "compilerOptions": {
    "composite": true, // added form gemini
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"], // added form gemini
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
    "verbatimModuleSyntax": false,
  },
  "include": [
    "server/**/*",
    "server/types/**/*.d.ts",
  ],
}

